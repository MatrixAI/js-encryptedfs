{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2016",
    "baseUrl": "./src",
    "paths": {
      "@encryptedfs/*": ["*"]
    },
    "typeRoots": [
        "./node_modules/@types"
    ]
  },
  "include": [ "./src/**/*" ]
}
