{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2018",
    "baseUrl": "./src",
    "strictBindCallApply": true,
  },
  "include": [
    "./src/**/*",
  ]
}
